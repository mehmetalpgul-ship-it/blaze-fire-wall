{
  "name": "blaze-fire-wall",
  "version": "0.1.0",
  "description": "Blaze Fire Wall - cross-platform watcher that quarantines .exe files (ignores zip/rar/iso)",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm:watch-renderer\" \"npm:start\"",
    "watch-renderer": "vite --config src/renderer/vite.config.js",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.example.blazefirewall",
    "productName": "Blaze Fire Wall",
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "arm64": true
    },
    "win": {
      "target": ["nsis"]
    },
    "linux": {
      "target": ["AppImage"]
    }
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "electron-store": "^8.1.0",
    "sqlite3": "^5.1.6",
    "better-sqlite3": "^8.0.1" 
  },
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.6.0",
    "concurrently": "^8.0.1",
    "vite": "^5.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
